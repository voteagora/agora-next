{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "typeRoots": ["./src/app/types", "./node_modules/@types"],
    "types": ["node", "hapi__catbox"],
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "isomorphic-dompurify": ["./src/lib/shims/isomorphicDompurify"],
      "viem/actions": ["./src/lib/shims/viemActionsCompat"],
      "react-infinite-scroller": ["./src/lib/shims/InfiniteScroll"],
      "swagger-ui-react": ["./src/lib/shims/SwaggerUI"],
      "@react-native-async-storage/async-storage": [
        "./src/lib/shims/asyncStorage"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx",
    "**/*.js",
    ".next/types/**/*.ts",
    "setupTests.ts"
  ],
  "exclude": ["node_modules"]
}
